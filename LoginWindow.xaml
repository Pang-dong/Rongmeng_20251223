<Window x:Class="Rongmeng_20251223.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="380" 
        SizeToContent="Height"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Title="{Binding WindowTitle}"
        Background="#F8F9FA">

    <Grid Margin="30,15,30,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="账号 / User:" Foreground="#333333" FontWeight="Bold" FontSize="12" Margin="2,0,0,3"/>

            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                     IsEnabled="{Binding IsMesMode}" Height="30" 
                     VerticalContentAlignment="Center" Padding="5,0"
                     Foreground="Black" CaretBrush="Black" BorderBrush="#CCCCCC"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="密码 / Password:" Foreground="#333333" FontWeight="Bold" FontSize="12" Margin="2,0,0,3"/>

            <PasswordBox x:Name="TxtPassword" IsEnabled="{Binding IsMesMode}" 
                         Height="30" VerticalContentAlignment="Center" Padding="5,0"
                         Foreground="Black" CaretBrush="Black" BorderBrush="#CCCCCC"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="77.975"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <CheckBox Content="记住密码" IsChecked="{Binding IsRememberPassword}" 
                      IsEnabled="{Binding IsMesMode}" VerticalAlignment="Center" 
                      FontSize="12" Margin="0,0,8,0" Height="16"
                      Foreground="#333333"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="6,0,0,0" Width="230">
                <TextBlock Text="测试工站:" VerticalAlignment="Center" Foreground="#333333" FontWeight="Bold" FontSize="12" Margin="0,0,9,0"/>
                <ComboBox ItemsSource="{Binding StationList}" SelectedItem="{Binding SelectedStation}" 
                          MinWidth="168" Height="28" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"
                          Foreground="Black">
                    <ComboBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.133"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ComboBox.RenderTransform>
                </ComboBox>
            </StackPanel>
        </Grid>

        <Border Grid.Row="3" BorderBrush="#DDDDDD" BorderThickness="0,1,0,1" Padding="0,10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="运行模式：" VerticalAlignment="Center" Foreground="#333333" FontWeight="Bold" FontSize="12" Margin="0,0,15,0"/>
                <RadioButton Content="MES模式" IsChecked="{Binding IsMesMode}" GroupName="Mode" 
                             VerticalContentAlignment="Center" Margin="0,0,25,0" FontSize="12"
                             Foreground="#333333"/>
                <RadioButton Content="测试模式" GroupName="Mode" IsChecked="{Binding IsTestMode}" 
                             VerticalContentAlignment="Center" FontSize="12"
                             Foreground="#333333"/>
            </StackPanel>
        </Border>

        <Button Grid.Row="4" Content="登    录" 
                Command="{Binding LoginCommand}" 
                CommandParameter="{Binding ElementName=TxtPassword}"
                IsDefault="True"
                Height="40" Foreground="White" 
                FontWeight="ExtraBold" FontSize="16" BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#0078D7" CornerRadius="4" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#004578"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                        <Setter Property="Foreground" Value="#888888"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <TextBlock Grid.Row="5" Text="{Binding ErrorMessage}" 
                   Foreground="#D32F2F" FontSize="12" Margin="0,8,0,0" 
                   TextAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>