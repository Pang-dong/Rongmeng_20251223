<Window x:Class="Rongmeng_20251223.FullScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="全屏预览" 
        WindowState="Maximized" 
        WindowStyle="None" 
        Topmost="True" 
        Background="Black"
        KeyDown="Window_KeyDown">
    <Grid>
        <Image x:Name="FullImage" Stretch="Uniform" MouseLeftButtonDown="FullImage_MouseLeftButtonDown"/>

        <Button Content="❌ 关闭全屏 (ESC)" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="20" Padding="10,5" Background="#88000000" Foreground="White" BorderThickness="0"
                Click="CloseButton_Click" Opacity="0.6"/>
    </Grid>
</Window>